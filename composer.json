{
    "name": "think/runtime",
    "description": "ThinkPHP Runtime Component - Enables decoupling ThinkPHP applications from global state",
    "type": "composer-plugin",
    "license": "MIT",
    "keywords": ["thinkphp", "runtime", "workerman", "reactphp", "swoole"],
    "authors": [
        {
            "name": "ThinkPHP Runtime Contributors",
            "email": "runtime@thinkphp.cn"
        }
    ],
    "require": {
        "php": ">=8.0",
        "composer-plugin-api": "^2.0"
    },
    "require-dev": {
        "topthink/framework": "^8.0",
        "workerman/workerman": "^4.0",
        "react/http": "^1.0",
        "react/socket": "^1.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-mock": "^2.0",
        "mockery/mockery": "^1.5",
        "composer/composer": "^2.0"
    },
    "suggest": {
        "dunglas/frankenphp": "To use the FrankenPHP runtime",
        "ext-swoole": "To use the Swoole runtime",
        "vercel/php": "To use the Vercel runtime"
    },
    "suggest": {
        "topthink/framework": "For ThinkPHP framework integration",
        "workerman/workerman": "For Workerman server support",
        "react/http": "For ReactPHP HTTP server support",
        "react/socket": "For ReactPHP socket server support"
    },
    "autoload": {
        "psr-4": {
            "Think\\Runtime\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Think\\Runtime\\Tests\\": "tests/"
        }
    },
    "extra": {
        "class": "Think\\Runtime\\Composer\\RuntimePlugin",
        "runtime": {
            "class": "Think\\Runtime\\Runtime\\ThinkPHPRuntime"
        }
    },
    "scripts": {
        "test": "pest",
        "test-coverage": "pest --coverage",
        "test-watch": "pest --watch"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": false,
            "think/runtime": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
